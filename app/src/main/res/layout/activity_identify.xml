<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:camerakit="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Identify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen"
    tools:context="com.example.gahallon.app2.Identify">


    <com.wonderkiln.camerakit.CameraView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|top"
        camerakit:ckFocus="tap">


    </com.wonderkiln.camerakit.CameraView>
    <ImageButton
        android:id="@+id/btnHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        camerakit:srcCompat="@drawable/help"
        android:background="@null"
        android:layout_gravity="top|right"
        android:layout_margin="20dp"
        />
    <ImageButton
        android:id="@+id/btnDetectObject"
        android:background="#989898"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/capture"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"/>

    <ToggleButton
        android:layout_marginTop="20dp"
        android:id="@+id/onOffFlashlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:textOn="Flash Off"
        android:textOff="Flash On"
        android:checked="false"
        android:text="Turn On/Off Camera LED/ Flashlight Android" />


</FrameLayout>





